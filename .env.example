# PriceElephant Environment Variables
# Copy to .env and fill in actual values

# Database
DATABASE_URL=postgresql://username:password@localhost:5432/priceelephant
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# Redis
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Shopify
SHOPIFY_STORE_NAME=priceelephant
SHOPIFY_API_KEY=
SHOPIFY_API_SECRET=
SHOPIFY_ACCESS_TOKEN=

# Channable
CHANNABLE_API_KEY=
CHANNABLE_COMPANY_ID=
CHANNABLE_PROJECT_ID=

# Stripe
STRIPE_SECRET_KEY=sk_test_
STRIPE_PUBLISHABLE_KEY=pk_test_
STRIPE_WEBHOOK_SECRET=whsec_

# Klaviyo
KLAVIYO_API_KEY=
KLAVIYO_LIST_ID=

# Sentry
SENTRY_DSN=

# Intercom
INTERCOM_ACCESS_TOKEN=
INTERCOM_APP_ID=

# OpenAI (for AI features)
OPENAI_API_KEY=

# Proxy Services (for scraping)
BRIGHTDATA_USERNAME=
BRIGHTDATA_PASSWORD=
OXYLABS_USERNAME=
OXYLABS_PASSWORD=

# Google APIs
GOOGLE_SHOPPING_API_KEY=
GOOGLE_CUSTOM_SEARCH_ENGINE_ID=

# Server
NODE_ENV=development
PORT=3000
API_SECRET=your-api-secret-key-here
JWT_SECRET=your-jwt-secret-here

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Scraping
SCRAPER_CONCURRENT_JOBS=5
SCRAPER_RETRY_ATTEMPTS=3
SCRAPER_TIMEOUT_MS=30000

# Logging
LOG_LEVEL=info
