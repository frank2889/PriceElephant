{
  "phases": {
    "setup": {
      "nixPkgs": ["nodejs-18_x"],
      "aptPkgs": ["chromium", "chromium-driver"]
    },
    "install": {
      "cmds": [
        "npm ci --omit=dev",
        "npx playwright install-deps chromium"
      ]
    }
  },
  "start": {
    "cmd": "node server.js"
  },
  "variables": {
    "NIXPACKS_BUILD_DIR": "backend",
    "PLAYWRIGHT_SKIP_BROWSER_DOWNLOAD": "0",
    "PLAYWRIGHT_CHROMIUM_EXECUTABLE_PATH": "/usr/bin/chromium"
  }
}
