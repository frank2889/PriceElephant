{
  "phases": {
    "setup": {
      "nixPkgs": ["nodejs-18_x"]
    },
    "install": {
      "cmds": [
        "npm install --production",
        "npm install knex",
        "npx playwright install chromium --with-deps",
        "cd /app && NODE_ENV=production DATABASE_URL=$DATABASE_URL npx knex migrate:latest --knexfile backend/knexfile.js"
      ]
    }
  },
  "start": {
    "cmd": "node server.js"
  },
  "variables": {
    "NIXPACKS_BUILD_DIR": "backend"
  }
}
