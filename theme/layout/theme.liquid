<!doctype html>
<html lang="{{ request.locale.iso_code | default: 'nl' }}">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{{ page_title }} - {{ shop.name }}</title>
    {{ content_for_header }}
    
    <!-- SEO: Multi-language hreflang tags -->
    {% assign base_url = shop.url %}
    <link rel="alternate" hreflang="en" href="{{ base_url }}{{ request.path }}" />
    <link rel="alternate" hreflang="nl-NL" href="{{ base_url }}/nl-nl{{ request.path }}" />
    <link rel="alternate" hreflang="x-default" href="{{ base_url }}{{ request.path }}" />
    
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&display=swap" rel="stylesheet">
    {{ 'base.css' | asset_url | stylesheet_tag }}
    
    <!-- Chart.js for Price Intelligence -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>
    
    <!-- PriceElephant API Configuration -->
    <script>
      window.PRICEELEPHANT_API = '{{ settings.priceelephant_api_url | default: "http://localhost:3000" }}';
    </script>
    
    <style>
      :root {
        /* Purple Design System - Webelephant */
        --primary-purple: #7C3AED;
        --primary-light-purple: #A78BFA;
        --primary-dark-purple: #2E1065;
        --text-dark: #1F2937;
        --text-medium: #6B7280;
        --text-light: #9CA3AF;
        --text-white: #ffffff;
        --background-primary: #F9FAFB;
        --background-light: #F3F4F6;
        --border-light: #E5E7EB;
        --button-purple: #8B5CF6;
        --button-hover: #7C3AED;
      }
    </style>
  </head>
  <body class="priceelephant" style="font-family: 'Inter', {{ settings.body_font.family | default: '-apple-system, BlinkMacSystemFont, Segoe UI, Roboto, sans-serif' }};">
    {% section 'header' %}

    <main id="MainContent" class="site-main" role="main">
      {{ content_for_layout }}
    </main>

    {% section 'footer' %}

    {{ 'price-charts.js' | asset_url | script_tag }}
    {{ 'price-alerts.js' | asset_url | script_tag }}
  </body>
</html>
