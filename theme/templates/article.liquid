{% layout 'theme' %}

<article class="article-page">
  <div class="container">
    <header class="article-page__header">
      <div class="article-page__meta">
        <time datetime="{{ article.published_at | date: '%Y-%m-%d' }}">
          {{ article.published_at | date: format: 'month_day_year' }}
        </time>
        {% if article.author != blank %}
          <span class="article-page__author">by {{ article.author }}</span>
        {% endif %}
        {% if blog %}
          <a href="{{ blog.url }}" class="article-page__blog-link">{{ blog.title }}</a>
        {% endif %}
      </div>
      
      <h1 class="article-page__title">{{ article.title }}</h1>
      
      {% if article.excerpt != blank %}
        <p class="article-page__excerpt">{{ article.excerpt }}</p>
      {% endif %}
    </header>

    {% if article.image %}
      <div class="article-page__featured-image">
        <img src="{{ article.image | img_url: '1200x600' }}" alt="{{ article.image.alt | escape }}">
      </div>
    {% endif %}

    <div class="article-page__content">
      <div class="article-content">
        {{ article.content }}
      </div>
      
      {% if article.tags.size > 0 %}
        <div class="article-page__tags">
          <h3>Tags</h3>
          <div class="tags-list">
            {% for tag in article.tags %}
              <a href="{{ blog.url }}/tagged/{{ tag | handle }}" class="tag">{{ tag }}</a>
            {% endfor %}
          </div>
        </div>
      {% endif %}
    </div>

    <footer class="article-page__footer">
      <div class="article-navigation">
        {% if blog.previous_article %}
          <a href="{{ blog.previous_article.url }}" class="article-nav article-nav--previous">
            <span class="article-nav__label">Previous</span>
            <span class="article-nav__title">{{ blog.previous_article.title | truncate: 50 }}</span>
          </a>
        {% endif %}
        
        {% if blog.next_article %}
          <a href="{{ blog.next_article.url }}" class="article-nav article-nav--next">
            <span class="article-nav__label">Next</span>
            <span class="article-nav__title">{{ blog.next_article.title | truncate: 50 }}</span>
          </a>
        {% endif %}
      </div>
      
      <div class="article-page__back">
        <a href="{{ blog.url }}" class="btn btn--secondary">
          ‚Üê Back to {{ blog.title }}
        </a>
      </div>
    </footer>

    {% if blog.moderated? and article.comments_count > 0 %}
      <div class="article-comments">
        <h3>Comments ({{ article.comments_count }})</h3>
        {% paginate article.comments by 5 %}
          <div class="comments-list">
            {% for comment in article.comments %}
              <div class="comment">
                <div class="comment__header">
                  <strong class="comment__author">{{ comment.author }}</strong>
                  <time class="comment__date" datetime="{{ comment.created_at | date: '%Y-%m-%d' }}">
                    {{ comment.created_at | date: format: 'abbreviated_date' }}
                  </time>
                </div>
                <div class="comment__content">
                  {{ comment.content }}
                </div>
              </div>
            {% endfor %}
          </div>
          
          {% if paginate.pages > 1 %}
            <nav class="comments-pagination">
              {{ paginate | default_pagination }}
            </nav>
          {% endif %}
        {% endpaginate %}
      </div>
    {% endif %}

    {% if blog.moderated? %}
      <div class="article-comment-form">
        <h3>Leave a comment</h3>
        {% form 'new_comment', article %}
          {% if form.posted_successfully? %}
            <div class="form-success">
              {% if blog.moderated? and comment.status == 'pending' %}
                Your comment was posted successfully! It will be visible once approved.
              {% else %}
                Your comment was posted successfully! Thank you!
              {% endif %}
            </div>
          {% endif %}

          {% if form.errors %}
            <div class="form-errors">
              <h4>Please correct the following errors:</h4>
              <ul>
                {% for field in form.errors %}
                  <li>{{ field }} {{ form.errors.messages[field] }}</li>
                {% endfor %}
              </ul>
            </div>
          {% endif %}

          <div class="comment-form">
            <div class="comment-form__row">
              <div class="comment-form__field">
                <label for="CommentAuthor">Name *</label>
                <input type="text" name="comment[author]" id="CommentAuthor" value="{{ form.author }}" autocapitalize="words" required>
              </div>
              <div class="comment-form__field">
                <label for="CommentEmail">Email *</label>
                <input type="email" name="comment[email]" id="CommentEmail" value="{{ form.email }}" autocorrect="off" autocapitalize="off" required>
              </div>
            </div>
            
            <div class="comment-form__field">
              <label for="CommentBody">Comment *</label>
              <textarea name="comment[body]" id="CommentBody" required>{{ form.body }}</textarea>
            </div>
            
            <button type="submit" class="btn btn--primary">Post Comment</button>
          </div>
        {% endform %}
      </div>
    {% endif %}
  </div>
</article>

<style>
  .article-page {
    padding: 2rem 0;
  }
  
  .article-page__header {
    text-align: center;
    margin-bottom: 2rem;
    max-width: 800px;
    margin-left: auto;
    margin-right: auto;
  }
  
  .article-page__meta {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 1rem;
    margin-bottom: 1rem;
    font-size: 0.9rem;
    color: #666;
    flex-wrap: wrap;
  }
  
  .article-page__meta time {
    font-weight: 500;
  }
  
  .article-page__blog-link {
    color: var(--primary-color, #FF6B00);
    text-decoration: none;
  }
  
  .article-page__blog-link:hover {
    text-decoration: underline;
  }
  
  .article-page__title {
    font-size: 2.5rem;
    font-weight: bold;
    color: var(--secondary-color, #1C1C1C);
    margin: 0 0 1rem 0;
    line-height: 1.2;
  }
  
  .article-page__excerpt {
    font-size: 1.1rem;
    color: #666;
    line-height: 1.6;
    margin: 0;
  }
  
  .article-page__featured-image {
    margin-bottom: 2rem;
    border-radius: 8px;
    overflow: hidden;
  }
  
  .article-page__featured-image img {
    width: 100%;
    height: auto;
    max-height: 400px;
    object-fit: cover;
  }
  
  .article-page__content {
    max-width: 800px;
    margin: 0 auto 3rem auto;
  }
  
  .article-content {
    line-height: 1.7;
    color: var(--secondary-color, #1C1C1C);
  }
  
  .article-content h2,
  .article-content h3,
  .article-content h4 {
    color: var(--primary-color, #FF6B00);
    margin: 2rem 0 1rem 0;
  }
  
  .article-content p {
    margin-bottom: 1.5rem;
  }
  
  .article-content img {
    max-width: 100%;
    height: auto;
    border-radius: 4px;
    margin: 1rem 0;
  }
  
  .article-content blockquote {
    border-left: 4px solid var(--primary-color, #FF6B00);
    padding-left: 1rem;
    margin: 2rem 0;
    font-style: italic;
    color: #666;
  }
  
  .article-page__tags {
    margin-top: 2rem;
    padding-top: 2rem;
    border-top: 1px solid #e9ecef;
  }
  
  .article-page__tags h3 {
    margin-bottom: 1rem;
    color: var(--secondary-color, #1C1C1C);
  }
  
  .tags-list {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }
  
  .tag {
    display: inline-block;
    padding: 0.25rem 0.75rem;
    background: #f8f9fa;
    color: var(--secondary-color, #1C1C1C);
    text-decoration: none;
    border-radius: 20px;
    font-size: 0.9rem;
    transition: all 0.2s ease;
  }
  
  .tag:hover {
    background: var(--primary-color, #FF6B00);
    color: white;
  }
  
  .article-page__footer {
    max-width: 800px;
    margin: 0 auto;
    padding-top: 2rem;
    border-top: 1px solid #e9ecef;
  }
  
  .article-navigation {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1rem;
    margin-bottom: 2rem;
  }
  
  .article-nav {
    display: block;
    padding: 1rem;
    background: #f8f9fa;
    border-radius: 8px;
    text-decoration: none;
    color: var(--secondary-color, #1C1C1C);
    transition: background 0.2s ease;
  }
  
  .article-nav:hover {
    background: #e9ecef;
  }
  
  .article-nav--next {
    text-align: right;
  }
  
  .article-nav__label {
    display: block;
    font-size: 0.9rem;
    color: #666;
    margin-bottom: 0.25rem;
  }
  
  .article-nav__title {
    display: block;
    font-weight: 500;
  }
  
  .article-page__back {
    text-align: center;
  }
  
  .article-comments,
  .article-comment-form {
    max-width: 800px;
    margin: 3rem auto 0 auto;
    padding-top: 2rem;
    border-top: 1px solid #e9ecef;
  }
  
  .comment {
    margin-bottom: 2rem;
    padding: 1rem;
    background: #f8f9fa;
    border-radius: 8px;
  }
  
  .comment__header {
    display: flex;
    justify-content: space-between;
    margin-bottom: 0.5rem;
    align-items: center;
  }
  
  .comment__author {
    color: var(--primary-color, #FF6B00);
  }
  
  .comment__date {
    font-size: 0.9rem;
    color: #666;
  }
  
  .comment-form__row {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1rem;
    margin-bottom: 1rem;
  }
  
  .comment-form__field {
    margin-bottom: 1rem;
  }
  
  .comment-form__field label {
    display: block;
    margin-bottom: 0.5rem;
    font-weight: 500;
  }
  
  .comment-form__field input,
  .comment-form__field textarea {
    width: 100%;
    padding: 0.75rem;
    border: 1px solid #ddd;
    border-radius: 4px;
    font-family: inherit;
  }
  
  .comment-form__field textarea {
    min-height: 120px;
    resize: vertical;
  }
  
  .form-success {
    padding: 1rem;
    background: #d4edda;
    color: #155724;
    border: 1px solid #c3e6cb;
    border-radius: 4px;
    margin-bottom: 1rem;
  }
  
  .form-errors {
    padding: 1rem;
    background: #f8d7da;
    color: #721c24;
    border: 1px solid #f5c6cb;
    border-radius: 4px;
    margin-bottom: 1rem;
  }
  
  .btn {
    display: inline-block;
    padding: 0.75rem 1.5rem;
    border: none;
    border-radius: 4px;
    text-decoration: none;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.2s ease;
  }
  
  .btn--primary {
    background-color: var(--primary-color, #FF6B00);
    color: white;
  }
  
  .btn--secondary {
    background-color: #f8f9fa;
    color: var(--secondary-color, #1C1C1C);
    border: 1px solid #ddd;
  }
  
  .btn:hover {
    opacity: 0.9;
    transform: translateY(-1px);
  }
  
  @media (max-width: 768px) {
    .article-page__title {
      font-size: 2rem;
    }
    
    .article-navigation {
      grid-template-columns: 1fr;
    }
    
    .article-nav--next {
      text-align: left;
    }
    
    .comment-form__row {
      grid-template-columns: 1fr;
    }
    
    .article-page__meta {
      flex-direction: column;
      gap: 0.5rem;
    }
  }
</style>