{% layout 'theme' %}

<div class="page-404">
  <div class="container">
    <header class="page-404__header">
      <h1 class="page-404__title">{{ 'templates.404.title' | t }}</h1>
      <p class="page-404__subtext">{{ 'general.404.subtext_html' | t }}</p>
    </header>
    
    <div class="page-404__content">
      <p>The page you're looking for might have been moved, deleted, or doesn't exist.</p>
      
      <div class="page-404__actions">
        <a href="/" class="btn btn--primary">
          {{ 'general.continue_shopping' | t | default: 'Continue shopping' }}
        </a>
        
        <form action="/search" method="get" class="page-404__search">
          <div class="search-field">
            <input type="search" name="q" placeholder="{{ 'general.search.search' | t }}" class="search-input">
            <button type="submit" class="search-button">
              <span class="visually-hidden">{{ 'general.search.search' | t }}</span>
              <svg width="16" height="16" viewBox="0 0 16 16" fill="none">
                <path d="M15 15L10.5 10.5M12 6.5C12 9.53757 9.53757 12 6.5 12C3.46243 12 1 9.53757 1 6.5C1 3.46243 3.46243 1 6.5 1C9.53757 1 12 3.46243 12 6.5Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<style>
  .page-404 {
    padding: 4rem 0;
    text-align: center;
  }
  
  .page-404__title {
    font-size: 3rem;
    font-weight: bold;
    margin-bottom: 1rem;
    color: var(--primary-color, #FF6B00);
  }
  
  .page-404__subtext {
    font-size: 1.2rem;
    margin-bottom: 2rem;
    color: #666;
  }
  
  .page-404__content {
    max-width: 500px;
    margin: 0 auto;
  }
  
  .page-404__actions {
    margin-top: 2rem;
    display: flex;
    flex-direction: column;
    gap: 1rem;
    align-items: center;
  }
  
  .btn {
    display: inline-block;
    padding: 0.75rem 1.5rem;
    border: none;
    border-radius: 4px;
    text-decoration: none;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.2s ease;
  }
  
  .btn--primary {
    background-color: var(--primary-color, #FF6B00);
    color: white;
  }
  
  .btn--primary:hover {
    opacity: 0.9;
    transform: translateY(-1px);
  }
  
  .page-404__search {
    width: 100%;
    max-width: 300px;
  }
  
  .search-field {
    display: flex;
    border: 1px solid #ddd;
    border-radius: 4px;
    overflow: hidden;
  }
  
  .search-input {
    flex: 1;
    padding: 0.75rem;
    border: none;
    outline: none;
  }
  
  .search-button {
    padding: 0.75rem;
    background: var(--primary-color, #FF6B00);
    color: white;
    border: none;
    cursor: pointer;
  }
  
  .visually-hidden {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border: 0;
  }
  
  @media (min-width: 768px) {
    .page-404__actions {
      flex-direction: row;
      justify-content: center;
    }
  }
</style>