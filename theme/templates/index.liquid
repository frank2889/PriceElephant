<!-- Pricing Section -->
<section id="pricing" class="pricing-section">
  <div class="container">
    <div class="pricing-header">
      <h2>{{ 'priceelephant.homepage.pricing.title' | t }}</h2>
      <p style="color: #6B7280; font-size: 1.125rem;">{{ 'priceelephant.homepage.pricing.subtitle' | t }}</p>
    </div>
    
    <div class="pricing-grid">
      <!-- Trial Plan -->
      <div class="pricing-card">
        <h3>{{ 'priceelephant.homepage.pricing.trial.name' | t }}</h3>
        <div class="pricing-amount">{{ 'priceelephant.homepage.pricing.trial.price' | t }}</div>
        <div class="pricing-period">{{ 'priceelephant.homepage.pricing.trial.period' | t }}</div>
        <ul class="pricing-features">
          {% for feature in (0..4) %}
            <li>{{ 'priceelephant.homepage.pricing.trial.features' | t | split: '||' | slice: feature }}</li>
          {% endfor %}
        </ul>
        <a href="/account" class="btn-large btn-outline" style="width: 100%; color: #7C3AED; border-color: #7C3AED;">
          {{ 'priceelephant.homepage.pricing.trial.cta' | t }}
        </a>
      </div>
      
      <!-- Starter Plan -->
      <div class="pricing-card">
        <h3>{{ 'priceelephant.homepage.pricing.starter.name' | t }}</h3>
        <div class="pricing-amount">{{ 'priceelephant.homepage.pricing.starter.price' | t }}</div>
        <div class="pricing-period">{{ 'priceelephant.homepage.pricing.starter.period' | t }}</div>
        <ul class="pricing-features">
          {% for feature in (0..5) %}
            <li>{{ 'priceelephant.homepage.pricing.starter.features' | t | split: '||' | slice: feature }}</li>
          {% endfor %}
        </ul>
        <a href="/account" class="btn-large" style="background: #7C3AED; color: white; width: 100%;">
          {{ 'priceelephant.homepage.pricing.starter.cta' | t }}
        </a>
      </div>
      
      <!-- Professional Plan (Featured) -->
      <div class="pricing-card featured">
        <span class="pricing-badge">{{ 'priceelephant.homepage.pricing.professional.badge' | t }}</span>
        <h3>{{ 'priceelephant.homepage.pricing.professional.name' | t }}</h3>
        <div class="pricing-amount">{{ 'priceelephant.homepage.pricing.professional.price' | t }}</div>
        <div class="pricing-period">{{ 'priceelephant.homepage.pricing.professional.period' | t }}</div>
        <ul class="pricing-features">
          {% for feature in (0..6) %}
            <li>{{ 'priceelephant.homepage.pricing.professional.features' | t | split: '||' | slice: feature }}</li>
          {% endfor %}
        </ul>
        <a href="/account" class="btn-large" style="background: #7C3AED; color: white; width: 100%;">
          {{ 'priceelephant.homepage.pricing.professional.cta' | t }}
        </a>
      </div>
      
      <!-- Enterprise Plan -->
      <div class="pricing-card">
        <h3>{{ 'priceelephant.homepage.pricing.enterprise.name' | t }}</h3>
        <div class="pricing-amount">{{ 'priceelephant.homepage.pricing.enterprise.price' | t }}</div>
        <div class="pricing-period">{{ 'priceelephant.homepage.pricing.enterprise.period' | t }}</div>
        <ul class="pricing-features">
          {% for feature in (0..6) %}
            <li>{{ 'priceelephant.homepage.pricing.enterprise.features' | t | split: '||' | slice: feature }}</li>
          {% endfor %}
        </ul>
        <a href="/pages/contact" class="btn-large btn-outline" style="width: 100%; color: #7C3AED; border-color: #7C3AED;">
          {{ 'priceelephant.homepage.pricing.enterprise.cta' | t }}
