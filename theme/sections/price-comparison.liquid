<script>
// Business Intelligence Functions
function refreshCompetitorData() {
  const grid = document.getElementById('CompetitorGrid');
  if (grid) {
    grid.innerHTML = '<p class="loading">Data wordt vernieuwd...</p>';
    
    // Simulate API call
    setTimeout(() => {
      location.reload(); // In production, update via AJAX
    }, 2000);
  }
}

// Initialize Business Analytics
document.addEventListener('DOMContentLoaded', function() {
  // Simulate real-time data updates
  setInterval(updateBusinessMetrics, 30000); // Update every 30 seconds
  
  // Load initial competitive data
  loadCompetitiveIntelligence();
});

function updateBusinessMetrics() {
  // Simulate metric updates
  const metrics = document.querySelectorAll('.stat-value');
  metrics.forEach(metric => {
    if (metric.id === 'active-alerts') {
      // Simulate alert count changes
      const currentValue = parseInt(metric.textContent);
      metric.textContent = Math.max(0, currentValue + Math.floor(Math.random() * 3 - 1));
    }
  });
}

function loadCompetitiveIntelligence() {
  // Simulate loading competitive data
  const avgPrice = document.getElementById('avg-competitor-price');
  const position = document.getElementById('market-position');
  const volatility = document.getElementById('price-volatility');
  
  setTimeout(() => {
    if (avgPrice) avgPrice.textContent = 'â‚¬{{ product.price | plus: 15 | money_without_currency | default: "1.049" }}';
    if (position) position.textContent = '#2 van 5 (Competitief)';
    if (volatility) volatility.textContent = 'Gemiddeld (Â±4%)';
  }, 1000);
}

// Handle business alert form
const alertForm = document.querySelector('.business-alert-form');
if (alertForm) {
  alertForm.addEventListener('submit', function(e) {
    e.preventDefault();
    alert('Business alert geactiveerd! U ontvangt notificaties op het opgegeven email adres.');
  });
}
</script>

