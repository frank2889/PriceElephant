<section class="home-hero" style="background-color: {{ settings.primary_color | default: '#ffffff' }}; padding: 80px 0 120px 0;">
  <div class="container home-hero__container">
    <div class="home-hero__content">
      <p class="home-hero__eyebrow" style="font-size: 14px; font-weight: 600; margin-bottom: 20px; text-transform: uppercase; letter-spacing: 1px; color: #666;">{{ section.settings.eyebrow | default: 'E-COMMERCE SCALING COMPANY' }}</p>
      <h1 class="home-hero__heading" style="font-size: clamp(60px, 12vw, 140px); font-weight: 900; line-height: 0.85; margin-bottom: 40px; text-transform: uppercase; letter-spacing: -4px; color: #000;">{{ section.settings.heading | default: 'SCALE IT UP' }}</h1>
      <p class="home-hero__subheading" style="font-size: 18px; font-weight: 400; margin-bottom: 40px; line-height: 1.6; max-width: 600px; color: #000;">{{ section.settings.subheading | default: 'B2B price intelligence platform voor e-commerce bedrijven. Monitor concurrentenprijzen real-time en optimaliseer je pricing strategy met AI-gedreven marktinzichten.' }}</p>
      <div class="home-hero__actions">
        <a class="button button--primary" href="{{ section.settings.primary_link }}">{{ section.settings.primary_label | default: 'START GRATIS TRIAL' }}</a>
        <a class="button button--ghost" href="{{ section.settings.secondary_link }}">{{ section.settings.secondary_label | default: 'PLAN EEN DEMO' }}</a>
      </div>
    </div>
    {% if section.settings.image != blank %}
      <div class="home-hero__media">
        <img src="{{ section.settings.image | img_url: '720x' }}" alt="{{ section.settings.heading | escape }}" loading="lazy">
      </div>
    {% endif %}
  </div>
</section>

{% schema %}
{
  "name": "Home hero",
  "settings": [
    {
      "type": "text",
      "id": "eyebrow",
      "label": "Eyebrow",
      "default": "E-COMMERCE SCALING COMPANY"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "SCALE IT UP"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "B2B price intelligence platform voor e-commerce bedrijven. Monitor concurrentenprijzen real-time en optimaliseer je pricing strategy met AI-gedreven marktinzichten."
    },
    {
      "type": "url",
      "id": "primary_link",
      "label": "Primary CTA link",
      "default": "/pages/dashboard"
    },
    {
      "type": "text",
      "id": "primary_label",
      "label": "Primary CTA label",
      "default": "START GRATIS TRIAL"
    },
    {
      "type": "url",
      "id": "secondary_link",
      "label": "Secondary CTA link",
      "default": "/pages/contact"
    },
    {
      "type": "text",
      "id": "secondary_label",
      "label": "Secondary CTA label",
      "default": "PLAN EEN DEMO"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Visual"
    }
  ],
  "presets": [
    {
      "name": "Home hero"
    }
  ]
}
{% endschema %}
