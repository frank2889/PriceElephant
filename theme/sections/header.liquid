<header class="site-header" data-section-id="{{ section.id }}">
  <div class="container">
    <div class="site-header__content">
      <div class="site-header__logo">
        {% if section.settings.logo %}
          <a href="/" class="brand brand--image">
            <img src="{{ section.settings.logo | img_url: '200x' }}" alt="{{ shop.name }}" loading="lazy">
          </a>
        {% else %}
          <a href="/" class="brand brand--text">
            {{ shop.name }}
          </a>
        {% endif %}
      </div>

      <nav class="site-header__nav">
        {% for link in linklists[section.settings.menu].links %}
          <a href="{{ link.url }}" class="nav-link {% if link.active %}nav-link--active{% endif %}">
            {{ link.title }}
          </a>
        {% endfor %}
      </nav>

      <div class="site-header__actions">
        <a href="/search" class="header-action header-action--search">
          <svg width="20" height="20" viewBox="0 0 20 20" fill="none">
            <path d="M19 19L13 13M15 8C15 11.866 11.866 15 8 15C4.134 15 1 11.866 1 8C1 4.134 4.134 1 8 1C11.866 1 15 4.134 15 8Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
          <span class="visually-hidden">{{ 'general.search.search' | t }}</span>
        </a>

        <a href="/cart" class="header-action header-action--cart" id="cart-icon-bubble">
          <svg width="20" height="20" viewBox="0 0 20 20" fill="none">
            <path d="M7 18C7.55228 18 8 17.5523 8 17C8 16.4477 7.55228 16 7 16C6.44772 16 6 16.4477 6 17C6 17.5523 6.44772 18 7 18Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            <path d="M16 18C16.5523 18 17 17.5523 17 17C17 16.4477 16.5523 16 16 16C15.4477 16 15 16.4477 15 17C15 17.5523 15.4477 18 16 18Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            <path d="M1 1H4L6.68 11.39C6.77144 11.8504 7.02191 12.264 7.38755 12.5583C7.75318 12.8526 8.2107 13.009 8.68 13H15.4C15.8693 13.009 16.3268 12.8526 16.6925 12.5583C17.0581 12.264 17.3086 11.8504 17.4 11.39L19 5H5" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
          <span class="cart-count-bubble">
            <span aria-hidden="true">{{ cart.item_count }}</span>
            <span class="visually-hidden">{{ 'sections.header.cart_count' | t: count: cart.item_count }}</span>
          </span>
        </a>

        <button class="header-action header-action--menu mobile-nav-toggle" aria-expanded="false">
          <svg width="20" height="20" viewBox="0 0 20 20" fill="none">
            <path d="M3 6H21M3 12H21M3 18H21" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
          <span class="visually-hidden">{{ 'sections.header.menu' | t }}</span>
        </button>
      </div>
    </div>

    <div class="mobile-nav" id="mobile-nav">
      <nav class="mobile-nav__menu">
        {% for link in linklists[section.settings.menu].links %}
          <a href="{{ link.url }}" class="mobile-nav__link {% if link.active %}mobile-nav__link--active{% endif %}">
            {{ link.title }}
          </a>
        {% endfor %}
      </nav>
    </div>
  </div>
</header>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const mobileToggle = document.querySelector('.mobile-nav-toggle');
  const mobileNav = document.querySelector('.mobile-nav');
  
  if (mobileToggle && mobileNav) {
    mobileToggle.addEventListener('click', function() {
      const isExpanded = this.getAttribute('aria-expanded') === 'true';
      this.setAttribute('aria-expanded', !isExpanded);
      mobileNav.classList.toggle('mobile-nav--open');
      document.body.classList.toggle('mobile-nav-open');
    });
  }

  // Update cart count via AJAX
  function updateCartCount() {
    fetch('/cart.js')
      .then(response => response.json())
      .then(cart => {
        const cartBubble = document.querySelector('.cart-count-bubble span[aria-hidden="true"]');
        if (cartBubble) {
          cartBubble.textContent = cart.item_count;
        }
      })
      .catch(error => console.error('Error updating cart count:', error));
  }

  // Listen for cart updates
  document.addEventListener('cart:updated', updateCartCount);
});
</script>

<style>
  .site-header {
    background: var(--primary-white, white);
    border-bottom: 1px solid var(--border-light, #e9ecef);
    position: sticky;
    top: 0;
    z-index: 100;
    padding: 20px 0;
  }
  
  .site-header__content {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 2rem;
  }
  
  .site-header__logo {
    flex-shrink: 0;
  }
  
  .brand {
    text-decoration: none;
    color: var(--primary-black, #000);
    font-size: 24px;
    font-weight: 700;
    text-transform: lowercase;
    letter-spacing: -0.5px;
  }
  
  .brand--image img {
    max-height: 40px;
    width: auto;
  }
  
  .site-header__nav {
    display: flex;
    gap: 40px;
    align-items: center;
  }
  
  .nav-link {
    text-decoration: none;
    color: var(--text-black, #000);
    font-weight: 500;
    font-size: 14px;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    transition: opacity 0.3s ease;
    position: relative;
  }
  
  .nav-link:hover,
  .nav-link--active {
    opacity: 0.6;
  }
  
  .nav-link--active::after {
    content: '';
    position: absolute;
    bottom: -0.5rem;
    left: 0;
    right: 0;
    height: 2px;
    background: var(--primary-black, #000);
  }
  
  .site-header__actions {
    display: flex;
    align-items: center;
    gap: 1rem;
    flex-shrink: 0;
  }
  
  .header-action {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 44px;
    height: 44px;
    border: none;
    background: none;
    cursor: pointer;
    color: var(--text-black, #000);
    transition: opacity 0.3s ease;
    text-decoration: none;
    position: relative;
  }
  
  .header-action:hover {
    opacity: 0.6;
  }
  
  .header-action--menu {
    display: none;
  }
  
  .header-cta {
    background: var(--primary-black, #000);
    color: var(--primary-white, #fff);
    padding: 12px 24px;
    text-decoration: none;
    font-weight: 600;
    font-size: 14px;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    transition: all 0.3s ease;
    border: 2px solid var(--primary-black, #000);
  }
  
  .header-cta:hover {
    background: var(--primary-white, #fff);
    color: var(--primary-black, #000);
  }
  
  .cart-count-bubble {
    position: absolute;
    top: 8px;
    right: 8px;
    background: var(--primary-black, #000);
    color: var(--primary-white, #fff);
    border-radius: 50%;
    width: 20px;
    height: 20px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 0.75rem;
    font-weight: 500;
    min-width: 20px;
  }
  
  .mobile-nav {
    display: none;
    border-top: 1px solid #e9ecef;
    background: white;
  }
  
  .mobile-nav__menu {
    padding: 1rem 0;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }
  
  .mobile-nav__link {
    padding: 0.75rem 0;
    text-decoration: none;
    color: var(--secondary-color, #1C1C1C);
    font-weight: 500;
    border-bottom: 1px solid transparent;
    transition: all 0.2s ease;
  }
  
  .mobile-nav__link:hover,
  .mobile-nav__link--active {
    color: var(--primary-black, #000);
    border-bottom-color: var(--primary-black, #000);
    opacity: 0.6;
  }
  
  .visually-hidden {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border: 0;
  }
  
  @media (max-width: 768px) {
    .site-header__nav {
      display: none;
    }
    
    .header-action--menu {
      display: flex;
    }
    
    .mobile-nav--open {
      display: block;
    }
    
    .mobile-nav-open {
      overflow: hidden;
    }
  }
</style>

{% schema %}
{
  "name": "Header",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo image"
    },
    {
      "type": "link_list",
      "id": "menu",
      "label": "Menu",
      "default": "main-menu"
    }
  ]
}
{% endschema %}