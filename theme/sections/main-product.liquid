// Load competitor data (mock for demo)
document.addEventListener('DOMContentLoaded', function() {
  const productId = {{ product.id }};
  
  // Simulate API call to load competitor prices
  setTimeout(() => {
    const competitorData = [
      { name: 'Amazon', price: {{ product.price | plus: 20 }}, element: 0 },
      { name: 'Bol.com', price: {{ product.price | minus: 15 }}, element: 1 },
      { name: 'Coolblue', price: {{ product.price | plus: 10 }}, element: 2 }
    ];
    
    const competitors = document.querySelectorAll('#competitor-data-{{ product.id }} .competitor-item');
    const currentPrice = {{ product.price | divided_by: 100.0 }};
    
    competitorData.forEach((comp, index) => {
      if (competitors[index]) {
        const priceElement = competitors[index].querySelector('.competitor-price');
        const diffElement = competitors[index].querySelector('.price-diff');
        
        priceElement.textContent = 'â‚¬' + (comp.price / 100).toFixed(2);
        priceElement.classList.remove('loading');
        
        const diff = comp.price / 100 - currentPrice;
        diffElement.textContent = (diff > 0 ? '+' : '') + diff.toFixed(2);
        diffElement.className = 'price-diff ' + (diff > 0 ? 'higher' : diff < 0 ? 'lower' : 'same');
      }
    });
    
    // Update market position
    const marketRank = document.getElementById('market-rank');
    if (marketRank) {
      marketRank.textContent = '#2 van 4 (Competitief gepositioneerd)';
    }
  }, 1500);
});
</script>

