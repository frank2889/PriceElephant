{% assign primary_color = settings.primary_color | default: '#000000' %}
<section class="business-product-analysis" style="--primary-color: {{ primary_color }};">
  <div class="container">
    <div class="business-header">
      <h1 class="business-title">PRICING INTELLIGENCE</h1>
      <p class="business-subtitle">Product: {{ product.title }}</p>
      <p class="business-sku">SKU: {{ product.selected_or_first_available_variant.sku | default: 'N/A' }}</p>
    </div>

    <div class="business-analytics-grid">
      <!-- Current Pricing Strategy -->
      <div class="analytics-card primary-card">
        <h3 class="card-title">JOUW HUIDIGE STRATEGIE</h3>
        <div class="price-display">
          <span class="current-price">{{ product.price | money }}</span>
          <span class="price-label">Huidige verkoopprijs</span>
        </div>
        <div class="margin-info">
          <div class="margin-row">
            <span>Inkoopprijs:</span>
            <span>{{ product.compare_at_price | money | default: 'Niet ingesteld' }}</span>
          </div>
          <div class="margin-row">
            <span>Marge:</span>
            <span class="margin-percentage">
              {% if product.compare_at_price and product.price %}
                {{ product.price | minus: product.compare_at_price | divided_by: product.price | times: 100 | round: 1 }}%
              {% else %}
                N/A
              {% endif %}
            </span>
          </div>
        </div>
      </div>

      <!-- Competitor Analysis -->
      <div class="analytics-card">
        <h3 class="card-title">CONCURRENTIE ANALYSE</h3>
        <div id="competitor-data-{{ product.id }}" class="competitor-list">
          <div class="competitor-item">
            <span class="competitor-name">Amazon</span>
            <span class="competitor-price loading">Loading...</span>
            <span class="price-diff">--</span>
          </div>
          <div class="competitor-item">
            <span class="competitor-name">Bol.com</span>
            <span class="competitor-price loading">Loading...</span>
            <span class="price-diff">--</span>
          </div>
          <div class="competitor-item">
            <span class="competitor-name">Coolblue</span>
            <span class="competitor-price loading">Loading...</span>
            <span class="price-diff">--</span>
          </div>
        </div>
        <div class="market-position">
          <strong>Marktpositie: <span id="market-rank">Berekenen...</span></strong>
        </div>
      </div>

      <!-- AI Recommendations -->
      <div class="analytics-card recommendation-card">
        <h3 class="card-title">AI AANBEVELINGEN</h3>
        <div class="recommendation-content">
          <div class="recommendation-item">
            <span class="rec-icon">ðŸ’¡</span>
            <div class="rec-details">
              <strong>Optimale prijs: â‚¬{{ product.price | plus: 25 | money_without_currency }}</strong>
              <p>+5% marge mogelijk zonder marktaandeel te verliezen</p>
            </div>
          </div>
          <div class="recommendation-item">
            <span class="rec-icon">ðŸ“Š</span>
            <div class="rec-details">
              <strong>Trend: Stabiel</strong>
              <p>Concurrentenprijzen zijn afgelopen 7 dagen stabiel</p>
            </div>
          </div>
        </div>
        <button type="button" class="btn-business btn-primary" onclick="applyRecommendation()">
          PRIJS BIJWERKEN
        </button>
      </div>

      <!-- Quick Actions -->
      <div class="analytics-card actions-card">
        <h3 class="card-title">ACTIES</h3>
        <div class="action-buttons">
          <button type="button" class="btn-business btn-secondary" onclick="setAlert()">
            ðŸ”” ALERT INSTELLEN
          </button>
          <button type="button" class="btn-business btn-secondary" onclick="viewHistory()">
            ðŸ“ˆ PRIJSHISTORIE
          </button>
          <button type="button" class="btn-business btn-secondary" onclick="exportData()">
            ðŸ“Š EXPORT DATA
          </button>
        </div>
      </div>
    </div>

    <!-- Product Details for Business Context -->
    {% if section.settings.show_business_details %}
    <div class="business-product-details">
      <h3>PRODUCT INFORMATIE</h3>
      <div class="product-meta">
        <div class="meta-item">
          <strong>Voorraad:</strong> 
          <span class="stock-level">{{ product.selected_or_first_available_variant.inventory_quantity | default: 'Onbekend' }}</span>
        </div>
        <div class="meta-item">
          <strong>Verkocht (30d):</strong>
          <span class="sales-data">Verbind analytics voor data</span>
        </div>
        <div class="meta-item">
          <strong>Conversie:</strong>
          <span class="conversion-rate">Verbind analytics voor data</span>
        </div>
      </div>
      {% if product.description != blank %}
      <div class="product-description">
        <strong>Beschrijving:</strong>
        <p>{{ product.description | truncate: 200 }}</p>
      </div>
      {% endif %}
    </div>
    {% endif %}
  </div>
</section>

