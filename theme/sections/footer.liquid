<footer class="site-footer" data-section-id="{{ section.id }}">
  <div class="container">
    <div class="site-footer__content">
      <div class="site-footer__main">
        <div class="footer-column footer-column--brand">
          <div class="footer-brand">
            {% if section.settings.logo %}
              <img src="{{ section.settings.logo | img_url: '150x' }}" alt="{{ shop.name }}" class="footer-brand__logo">
            {% else %}
              <h3 class="footer-brand__name">{{ shop.name }}</h3>
            {% endif %}
          </div>
          {% if section.settings.description != blank %}
            <p class="footer-brand__description">{{ section.settings.description }}</p>
          {% endif %}
          <div class="footer-brand__powered">
            <p>Powered by <strong>Webelephant</strong> - E-commerce Scaling Company</p>
          </div>
        </div>

        <div class="footer-column">
          <h4 class="footer-column__title">{{ section.settings.menu_1_title | default: 'Quick Links' }}</h4>
          <nav class="footer-nav">
            {% for link in linklists[section.settings.menu_1].links %}
              <a href="{{ link.url }}" class="footer-nav__link">{{ link.title }}</a>
            {% endfor %}
          </nav>
        </div>

        <div class="footer-column">
          <h4 class="footer-column__title">{{ section.settings.menu_2_title | default: 'Customer Care' }}</h4>
          <nav class="footer-nav">
            {% for link in linklists[section.settings.menu_2].links %}
              <a href="{{ link.url }}" class="footer-nav__link">{{ link.title }}</a>
            {% endfor %}
          </nav>
        </div>

        <div class="footer-column">
          <h4 class="footer-column__title">{{ section.settings.newsletter_title | default: 'BUSINESS INTELLIGENCE' }}</h4>
          <p class="footer-newsletter__description">
            {{ section.settings.newsletter_description | default: 'Ontvang wekelijkse marktinzichten en pricing recommendations voor je business.' }}
          </p>
          <form class="footer-newsletter" action="/contact#contact_form" method="post" id="contact_form" accept-charset="UTF-8">
            <input type="hidden" name="form_type" value="customer" />
            <input type="hidden" name="utf8" value="âœ“" />
            <div class="footer-newsletter__field">
              <input 
                type="email" 
                name="contact[email]" 
                id="ContactFooter-email" 
                class="footer-newsletter__input"
                placeholder="{{ 'customer.login_page.email' | t }}"
                required
              >
              <button type="submit" class="footer-newsletter__button">
                <svg width="16" height="16" viewBox="0 0 16 16" fill="none">
                  <path d="M14.5 1.5L7 9L14.5 1.5ZM14.5 1.5L10 14.5L7 9L1.5 6L14.5 1.5Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
                <span class="visually-hidden">Subscribe</span>
              </button>
            </div>
          </form>
        </div>
      </div>

      <div class="site-footer__bottom">
        <div class="footer-bottom">
          <div class="footer-bottom__copyright">
            <p>&copy; {{ "now" | date: "%Y" }} {{ shop.name }}. {{ 'sections.footer.copyright' | t | default: 'All rights reserved.' }}</p>
          </div>
          
          {% if section.settings.show_payment_icons %}
            <div class="footer-bottom__payment">
              <span class="payment-icons">
                {{ 'sections.footer.payment' | t }}
                {% for type in shop.enabled_payment_types %}
                  {{ type | payment_type_svg_tag: class: 'payment-icon' }}
                {% endfor %}
              </span>
            </div>
          {% endif %}

          {% if section.settings.show_social_icons %}
            <div class="footer-bottom__social">
              {% if section.settings.social_twitter_link != blank %}
                <a href="{{ section.settings.social_twitter_link }}" class="social-icon" target="_blank" rel="noopener">
                  <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/>
                  </svg>
                  <span class="visually-hidden">Twitter</span>
                </a>
              {% endif %}
              
              {% if section.settings.social_facebook_link != blank %}
                <a href="{{ section.settings.social_facebook_link }}" class="social-icon" target="_blank" rel="noopener">
                  <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                  </svg>
                  <span class="visually-hidden">Facebook</span>
                </a>
              {% endif %}
              
              {% if section.settings.social_instagram_link != blank %}
                <a href="{{ section.settings.social_instagram_link }}" class="social-icon" target="_blank" rel="noopener">
                  <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M12.017 0C5.396 0 .029 5.367.029 11.987c0 6.62 5.367 11.987 11.988 11.987 6.62 0 11.987-5.367 11.987-11.987C24.014 5.367 18.637.001 12.017.001zM8.449 16.988c-1.297 0-2.448-.693-3.073-1.727L7.2 14.07c.329.329.779.534 1.249.534.97 0 1.756-.786 1.756-1.756s-.786-1.756-1.756-1.756c-.47 0-.92.205-1.249.534L5.376 10.44c.625-1.034 1.776-1.727 3.073-1.727 1.95 0 3.531 1.581 3.531 3.531s-1.581 3.531-3.531 3.531zm7.068 0c-1.297 0-2.448-.693-3.073-1.727l1.824-1.191c.329.329.779.534 1.249.534.97 0 1.756-.786 1.756-1.756s-.786-1.756-1.756-1.756c-.47 0-.92.205-1.249.534l-1.824-1.191c.625-1.034 1.776-1.727 3.073-1.727 1.95 0 3.531 1.581 3.531 3.531s-1.581 3.531-3.531 3.531z"/>
                  </svg>
                  <span class="visually-hidden">Instagram</span>
                </a>
              {% endif %}
            </div>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</footer>

<style>
  .site-footer {
    background: var(--primary-black, #000);
    color: var(--primary-white, #fff);
    margin-top: auto;
    padding: 80px 0 40px 0;
  }
  
  .site-footer__content {
    padding: 0;
  }
  
  .site-footer__main {
    display: grid;
    grid-template-columns: 2fr 1fr 1fr 1.5fr;
    gap: 2rem;
    margin-bottom: 2rem;
  }
  
  .footer-column__title {
    color: var(--primary-white, #fff);
    margin: 0 0 1rem 0;
    font-size: 16px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }
  
  .footer-brand__name {
    color: var(--primary-white, #fff);
    margin: 0 0 1rem 0;
    font-size: 24px;
    font-weight: 700;
    text-transform: lowercase;
    letter-spacing: -0.5px;
  }
  
  .footer-brand__logo {
    max-height: 50px;
    width: auto;
    margin-bottom: 1rem;
  }
  
  .footer-brand__description {
    color: #cccccc;
    line-height: 1.6;
    margin-bottom: 1rem;
  }
  
  .footer-brand__powered {
    color: #666666;
    font-size: 0.9rem;
  }
  
  .footer-brand__powered strong {
    color: #999999;
  }
  
  .footer-nav {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }
  
  .footer-nav__link {
    color: #cccccc;
    text-decoration: none;
    transition: color 0.2s ease;
    padding: 0.25rem 0;
  }
  
  .footer-nav__link:hover {
    color: var(--primary-white, #fff);
  }
  
  .footer-newsletter__description {
    color: #cccccc;
    margin-bottom: 1rem;
    line-height: 1.5;
  }
  
  .footer-newsletter__field {
    display: flex;
    border: 1px solid #444;
    border-radius: 4px;
    overflow: hidden;
    background: #333;
  }
  
  .footer-newsletter__input {
    flex: 1;
    padding: 0.75rem;
    border: none;
    background: transparent;
    color: white;
    outline: none;
  }
  
  .footer-newsletter__input::placeholder {
    color: #999;
  }
  
  .footer-newsletter__button {
    padding: 0.75rem;
    border: none;
    background: var(--primary-white, #fff);
    color: var(--primary-black, #000);
    cursor: pointer;
    transition: opacity 0.3s ease;
    font-weight: 600;
  }
  
  .footer-newsletter__button:hover {
    opacity: 0.8;
  }
  
  .site-footer__bottom {
    border-top: 1px solid #333333;
    padding-top: 1rem;
  }
  
  .footer-bottom {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 1rem;
  }
  
  .footer-bottom__copyright {
    color: #666666;
    font-size: 0.9rem;
  }
  
  .footer-bottom__payment {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: #666666;
    font-size: 0.9rem;
  }
  
  .payment-icon {
    height: 20px;
    width: auto;
    opacity: 0.7;
  }
  
  .footer-bottom__social {
    display: flex;
    gap: 1rem;
  }
  
  .social-icon {
    color: #cccccc;
    transition: color 0.2s ease;
  }
  
  .social-icon:hover {
    color: var(--primary-white, #fff);
  }
  
  .visually-hidden {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border: 0;
  }
  
  @media (max-width: 1024px) {
    .site-footer__main {
      grid-template-columns: 1fr 1fr;
      gap: 2rem;
    }
    
    .footer-column--brand {
      grid-column: 1 / -1;
    }
  }
  
  @media (max-width: 768px) {
    .site-footer__main {
      grid-template-columns: 1fr;
    }
    
    .footer-bottom {
      flex-direction: column;
      text-align: center;
    }
    
    .footer-bottom__payment {
      justify-content: center;
    }
  }
</style>

{% schema %}
{
  "name": "Footer",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Footer logo"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Footer description"
    },
    {
      "type": "header",
      "content": "Menu 1"
    },
    {
      "type": "text",
      "id": "menu_1_title",
      "label": "Menu 1 title",
      "default": "Quick Links"
    },
    {
      "type": "link_list",
      "id": "menu_1",
      "label": "Menu 1",
      "default": "footer"
    },
    {
      "type": "header",
      "content": "Menu 2"
    },
    {
      "type": "text",
      "id": "menu_2_title",
      "label": "Menu 2 title",
      "default": "Customer Care"
    },
    {
      "type": "link_list",
      "id": "menu_2",
      "label": "Menu 2"
    },
    {
      "type": "header",
      "content": "Newsletter"
    },
    {
      "type": "text",
      "id": "newsletter_title",
      "label": "Newsletter title",
      "default": "BUSINESS INTELLIGENCE"
    },
    {
      "type": "textarea",
      "id": "newsletter_description",
      "label": "Newsletter description",
      "default": "Ontvang wekelijkse marktinzichten en pricing recommendations voor je business."
    },
    {
      "type": "header",
      "content": "Social Media"
    },
    {
      "type": "checkbox",
      "id": "show_social_icons",
      "label": "Show social media icons",
      "default": true
    },
    {
      "type": "url",
      "id": "social_twitter_link",
      "label": "Twitter URL"
    },
    {
      "type": "url",
      "id": "social_facebook_link",
      "label": "Facebook URL"
    },
    {
      "type": "url",
      "id": "social_instagram_link",
      "label": "Instagram URL"
    },
    {
      "type": "header",
      "content": "Payment"
    },
    {
      "type": "checkbox",
      "id": "show_payment_icons",
      "label": "Show payment icons",
      "default": true
    }
  ]
}
{% endschema %}